# CodePlanner Docker Environment Configuration
# Copy this file to .env and fill in your actual values

###################################
# Provider Credentials (set per task)
###################################

# --- Embeddings Provider (required for embeddings) ---
EMBEDDING_API_KEY=
EMBEDDING_BASE_URL=https://api.openai.com/v1/
EMBEDDING_MODEL=text-embedding-3-small

# --- Planning Provider (required for planning) ---
PLANNING_API_KEY=
PLANNING_BASE_URL=
PLANNING_MODEL=gpt-5-nano

# --- Debugging Provider (optional; falls back to Planning if empty) ---
DEBUG_API_KEY=
DEBUG_BASE_URL=
DEBUG_MODEL=

# --- Optional Global Fallbacks (used ONLY if task-specific values above are empty) ---
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379

# WebSocket Gateway Configuration
WS_PORT=3000

###################################
# Global Fallback Base URL (used if dedicated base URLs are not provided)
###################################
LLM_BASE_URL=

# Optional: Performance tuning
BATCH_SIZE=20
MAX_CONTEXT_CHUNKS=15
TEMPERATURE=0.3
