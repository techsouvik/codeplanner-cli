# CodePlanner Docker Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI / OpenRouter API Configuration (REQUIRED)
# Use either OPENAI_API_KEY or OPENROUTER_API_KEY
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# Redis Configuration
REDIS_URL=redis://redis:6379

# WebSocket Gateway Configuration
WS_PORT=3000

###################################
# LLM Provider Configuration
###################################
# Override LLM base URL (e.g., OpenRouter: https://openrouter.ai/api/v1)
LLM_BASE_URL=

# Optional: Custom model configurations
EMBEDDING_MODEL=text-embedding-3-small
PLANNING_MODEL=gpt-4-turbo-preview
DEBUG_MODEL=

# Optional: Performance tuning
BATCH_SIZE=20
MAX_CONTEXT_CHUNKS=15
TEMPERATURE=0.3
